<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/list"

    tools:context=".activities.UserHomeActivity">

    <ImageView
        android:id="@+id/imageBloodBank"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/blood"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textBloodInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Social Blood Bank App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonDonateBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate Blood"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2196F3"
            />

        <Button
            android:id="@+id/buttonNeedBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need Blood"
            android:backgroundTint="#2196F3"
            />

    </LinearLayout>
</LinearLayout>
